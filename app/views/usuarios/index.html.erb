<div class="container-fluid table-responsive col-md-12 flex-lg-nowrap" style="margin-top: 100px;">
  <h3 class=" mb-4 text-center text-primary">Gerenciar Usuários</h3>
  <table class="table table-striped table-hover">
    <thead class="thead-light">
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>CPF</th>
        <th>Função</th>
        <th>Estabelecimentos</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @usuarios.each do |usuario| %>
        <tr>
          <td><%= usuario.nome %></td>
          <td><%= usuario.email %></td>
          <td><%= usuario.cpf %></td>
          <td><%= usuario.funcao.nome %></td>
          <td>
            <% usuario.estabelecimentos.each do |estabelecimento| %>
              <span class="badge badge-secondary"><%= estabelecimento.nome %></span><br>
            <% end %>
          </td>
          <td class="d-flex">
            <%= link_to edit_user_registration_path(usuario), class: 'btn btn-outline-primary mr-2' do %>
              <i class="fas fa-edit"></i> Editar
            <% end %>
            <%= button_to 'Excluir', usuario_path(usuario), method: :delete, data: { confirm: 'Tem certeza que deseja excluir este usuário?' }, class: 'btn btn-outline-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'Novo Usuário', new_user_registration_path, class: 'btn btn-primary mt-3' %>
